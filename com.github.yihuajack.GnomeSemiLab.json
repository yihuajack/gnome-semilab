{
    "app-id" : "com.github.yihuajack.GnomeSemiLab",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "43",
    "sdk" : "org.gnome.Sdk",
    "command" : "gnome-semilab",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name": "libcsv",
            "builddir" : true,
            "buildsystem" : "autotools",
            "no-autogen" : false,
            "rm-configure" : true,
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/rgamble/libcsv"
                },
                {
                    "type" : "script",
                    "commands": [ "autoreconf -fi" ]
                }
            ]
        },
        {
            "name": "xlsxwriter",
            "builddir" : true,
            "buildsystem" : "cmake",
            "sources" : [
                {
                    "type" : "git",
                    "branch" : "main",
                    "url" :"https://github.com/jmcnamara/libxlsxwriter"
                }
            ]
        },
        {
            "name" : "gnome-semilab",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "branch" : "main",
                    "url" : "file:///home/ayka-tsuzuki/gnome-semilab"
                }
            ]
        }
    ],
    "build-options" : {
        "env" : {        }
    }
}
